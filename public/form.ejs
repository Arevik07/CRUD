<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <table>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Update</td>
            <td>Delete</td>

        </tr>
         <% info.forEach(function(justOne) { %>
        <tr>
            <td><%= justOne.name %></td>
            <td><%= justOne.price %></td>
            <td><a class="update" href="update/<%= justOne._id %>">Update</a></td>
            <td><a class="delete" href="delete/<%= justOne._id %>">Delete</a></td>
        </tr>
    <% }); %>
    </table>

    <form class="form" action="/addName" method="post">
        <input class="Name" id="name" type="text" required name="name" placeholder="name" ><br><br>
        <input class="price"  id="price" type="number" name="price" placeholder="price"  ><br><br>
        <input class="image" id="image" type="text" name="image" placeholder="image" ><br><br>
        <input class="des" id="des" type="text" name="des" placeholder="description" ><br><br>
        <input class="uuld" id="uuld" type="number" name="uuld" placeholder="uuld" ><br><br>
        <input class="loc" id="loc" type="text" name="loc" placeholder="location" ><br><br>
        <!-- <input id="id" type="hidden" name="id" ><br><br> -->

        <input type="submit">
    </form>
  <!-- <script src="script.js"></script> -->
</body>
</html>
